generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())

  sources Source[]
}

model Source {
  id         String   @id @default(uuid()) @db.Uuid
  name       String   @unique
  url        String
  rssUrl     String
  categoryId String   @db.Uuid
  createdAt  DateTime @default(now())

  category Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  articles Article[]

  @@index([categoryId])
}

model Article {
  id             String   @id @default(uuid()) @db.Uuid
  title          String
  slug           String   @unique
  url            String   @unique
  author         String?
  summary        String?
  contentPreview String?
  publishedAt    DateTime
  readingTime    Int
  externalPopularityScore     Int      @default(0)
  externalPopularityPrevScore Int      @default(0)
  viralVelocityScore          Int      @default(0)
  hotTopicScore               Int      @default(0)
  breakthroughScore           Int      @default(0)
  popularityLastCheckedAt     DateTime?
  sourceId       String   @db.Uuid
  createdAt      DateTime @default(now())

  source Source     @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  tags   ArticleTag[]

  @@index([publishedAt])
  @@index([sourceId, publishedAt])
  @@index([externalPopularityScore])
  @@index([viralVelocityScore])
  @@index([hotTopicScore])
}

model Tag {
  id   String @id @default(uuid()) @db.Uuid
  name String @unique
  slug String @unique

  articles ArticleTag[]
}

model ArticleTag {
  articleId String @db.Uuid
  tagId     String @db.Uuid

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([articleId, tagId])
  @@index([tagId])
}
